---
const { title, description, image, link } = Astro.props;
---

<style>
  .image-hover {
    transition: all 5s ease-in-out;
    transform: translateY(0);
  }
  .image-hover:hover {
    transform: translateY(calc(-100% + 256px));
  }
</style>

<li class="h-full">
  <figure class="flex flex-col items-center max-w-[288px] p-4 rounded-lg  bg-white/30 backdrop-blur-md transition-all duration-200 hover:drop-shadow-[0_0_10px_rgba(255,255,255,0.2)]">
    <div class="overflow-hidden w-64 h-64 rounded-lg relative">
      <img class="w-full h-auto absolute top-0 transition-all image-hover"  src={`${image}`} alt="Imagen principal">
    </div>
    <figcaption class="flex flex-col mt-4 text-center">
      <h2 class="text-xl font-semibold">{title}</h2>
      <p class="mt-2 text-gray-800">{description}</p>
      <a href={`${link}`} class="mt-4 px-4 py-2 text-white bg-blue-500 rounded transition-colors duration-200 hover:bg-blue-600">Ver en GitHub</a>
    </figcaption>
  </figure>
</li>